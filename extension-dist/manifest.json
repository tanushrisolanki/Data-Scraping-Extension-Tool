{
  "manifest_version": 3,
  "name": "Data Scraper Extension",
  "version": "1.0",
  "description": "Scrape data from webpages and export as CSV",
  "permissions": ["scripting", "activeTab", "downloads"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
